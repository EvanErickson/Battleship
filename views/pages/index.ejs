<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Battleship</title>
    <meta name='author' content="Manas Sarpatwar">
    <meta name="description" content="Battleship in browser">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preload" href="/fonts/nunito-sans.extralight.ttf" as="font" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/nunito-sans.light.ttf" as="font" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />
    <link rel="stylesheet" type="text/css" href="css/balloon.css" />

    <script language="javascript" type="text/javascript" src="js/clipboard.js"></script>
</head>

<body>
    <div id="center">
        <div id="title">
            Battleship
            <button onclick="init()" class="button" id="multiplayer">Multiplayer</button>
        </div>
        <div id="share" class="noDisplay">
            <div id=shareBox>
                <label style='margin: 15px 0 5px 0'>Share game link:<button id="copyBtn" onclick="copy(this)"
                        aria-label="copied!" data-balloon-pos="up"><img id="copyImg" src="../img/copy.png" width="32"
                            height="32"></button></label>
                <input contenteditable="true" readonly='true' style='margin: 15px 0 30px 0' id="link">
                <button onclick="play()" class="button" id="play">Play</button>
            </div>
        </div>
    </div>

</body>
<script>
    document.getElementById('center').style.height = window.innerHeight + 'px';
    let title = document.getElementById('title');
    let share = document.getElementById('share');
    let link = document.getElementById('link');
    let copyBtn = document.getElementById('copyBtn');
    let game;

    function init() {
        let sessionGame = sessionStorage.getItem('game');
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/init', true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.onreadystatechange = function () {
            if (xhr.readyState == XMLHttpRequest.DONE) {
                var json = JSON.parse(xhr.responseText);
                title.classList.add('noDisplay')
                share.classList.remove('noDisplay')
                game = json.game;
                link.setAttribute('value', 'https://battleship-game-online.herokuapp.com/play/' + game);
                sessionStorage.setItem('game', game)
                copy();
            }
        }
        xhr.send(JSON.stringify({ game: sessionGame }));
    }


    function play() {
        window.location.href = '../play/' + game;
    }

    function copy() {
        Clipboard.copy(link.getAttribute('value'));
        copyBtn.setAttribute('data-balloon-visible', '');
        setTimeout(() => copyBtn.removeAttribute('data-balloon-visible'), 2000);
    };
</script>

</html>